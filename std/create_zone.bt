Func main h w cx cy
    If !cx
        SET cx 320
    END
    If !cy
        SET cy 240
    END
    DIV left $w 2
    DIV top $h 2
    SUB left $cx $left
    SUB top $cy $top

    ADD right $left $w
    ADD bottom $top $h

    CombatZoneResize $left $top $right $bottom TLResume
    HeartTeleport $cx $cy
    HeartMode 0
    TLPause
END